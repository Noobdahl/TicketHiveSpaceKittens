@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container">
    <div class="row border rounded-5 p-3 shadow box-area">
        <h3>@ViewData["Title"]</h3>
        <partial name="_StatusMessage" for="StatusMessage" />
        <div class="col-md-6">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="DisplayCountry" class="form-control" disabled />
                    <label asp-for="DisplayCountry" class="form-label"></label>
                </div>
                <div class="form-select mb-3">
                    <label asp-for="Input.Country" class="form-label">Select your Country:</label>
                    <select class="form-control" asp-for="Input.Country" asp-items="Html.GetEnumSelectList(typeof(Countries))">

                        <option value="">-- Select Country --</option>

                    </select>
                </div>
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

