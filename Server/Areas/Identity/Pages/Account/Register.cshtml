@page
@using TicketHiveSpaceKittens.Client.Services;
@using TicketHiveSpaceKittens.Server.Repository;
@model TicketHiveSpaceKittens.Server.Areas.Identity.Pages.Account.RegisterModel
@using TicketHiveSpaceKittens.Shared.Models;
@{
}

<link rel="stylesheet" type="text/css" href="~/css/LoginRegister-Style.css">

<!----------------------- Main Container -------------------------->

<div class="container">
    <div class="row border rounded-5 p-3 shadow box-area">

        <!--------------------------- Left Box ----------------------------->

        <div class=" leftBox col-md-6 rounded-4 d-flex  flex-column left-box">
            <div class="logo-image mb-3">
                <img class="img-fluid" src="~/Images/logos/yellow.png" alt="logo" style="width: 250px;">
            </div>
            <p class="text-leftBox">Be Ready!</p>
            <small class="text-leftBox text-wrap text-center">Make sure you don't miss <br>  your favorite event!</small>
        </div>

        <!-------------------- ------ Right Box ---------------------------->

        <div class="col-md-6 right-box">
            <div class="row align-items-center">
                <div class="header-text mb-4">
                    <h2>Sign Up!</h2>
                    <p>Welcome to SpaceKittens Events Register Page!</p>
                </div>
                <form method="post">
                    <div class="input-group mb-3">
                        <input id="input-username" type="text" asp-for="Username" placeholder="Enter Username" class="form-control form-control-lg bg-light fs-6" />
                    </div>
                    <div class="input-group mb-1">
                        <input id="input-password" type="password" asp-for="Password" placeholder="Enter Password" class="form-control form-control-lg bg-light fs-6" />
                    </div>
                    <!-------------------- ------ Select Section ---------------------------->
                    <div>
                        <label for="country">Select your Country:</label>
                        <select class="form-select" id="selectedCountries" asp-for="selectedCountry">
                            @foreach (var option in Enum.GetValues(typeof(Countries)))
                            {
                                <option value="@option">@option</option>
                            }
                        </select>
                    </div>

                    <div class="input-group mt-3">
                        <button class="btn btn-lg btn-primary w-100 fs-6">Register</button>
                    </div>
                </form>
                <div class="row mt-3">
                    <small>Do you already have an account?? <a href="~/Identity/Account/Login">Sign In</a></small>
                </div>
            </div>
        </div>

    </div>
</div>

